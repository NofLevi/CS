using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1123
{
    class Passport
    {
        private string _name;
        private int _number;
        private DateTime _expiryDate;
        public Passport(string name,int number,DateTime expiryDate)
        {
            _name = name;
            _number = number;
            _expiryDate = expiryDate;
        }

        public string GetName() { return _name; }
        public int GetNum() { return _number; }
        public DateTime GetExpiryDate() { return _expiryDate; }

        public void copy(Passport pass)
        {
            _name = pass.GetName();
            _number = pass.GetNum();
            _expiryDate = pass.GetExpiryDate();
        }

        public string ToString()
        {
            return "Name: <"+_name+ ">\n<Pass.num:" + _number + ">\n<Exp Date: <" +_expiryDate + ">"; 
        }

        public bool IsValid(DateTime dateChecked)
        {
            if (_expiryDate.Year < dateChecked.Year)
                return true;

            if (_expiryDate.Year == dateChecked.Year && _expiryDate.Month < dateChecked.Month)
                return true;

            if (_expiryDate.Year == dateChecked.Year && _expiryDate.Month == dateChecked.Month && _expiryDate.Day < dateChecked.Day)
                return true;

            return false;
        }

        public void SetExpiryDate(DateTime newexpiry)
        {
            _expiryDate = newexpiry;
        }
    }
}
